#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Page">
    <jcr:content
        cq:template="/conf/${clientName}-core/settings/wcm/templates/onecolumn"
        jcr:primaryType="cq:PageContent"
        jcr:title="Page2"
        sling:resourceType="${clientName}-core/components/template/base"
        subtitle="Page Sub-Title 2">
        <article
            jcr:primaryType="nt:unstructured"
            sling:resourceType="${clientName}-core/components/layout/article">
            <par
                jcr:primaryType="nt:unstructured"
                sling:resourceType="${clientName}-core/components/layout/container">
                <page-details
                    cq:tags="[${clientName}-core-showcase:content-type/page,${clientName}-core-showcase:content-type/widgets]"
                    jcr:mixinTypes="[cq:Taggable]"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="${clientName}-core/components/details/page-details"
                    cardStyle="[${clientName}-core-showcase:component-style-modifier/background/bg-c2,${clientName}-core-showcase:component-style-modifier/card/coloured]"
                    description="Page without Page Image and with non-Licensed Secondary Image"
                    showBreadcrumb="false"
                    showParsys="false"
                    showToolbar="false"
                    title="Page2">
                    <secondaryImage
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="${clientName}-core/components/media/image"
                        fileReference="/content/dam/${clientName}-core-showcase/en/components/media/image/city2.jpg"/>
                </page-details>
            </par>
        </article>
    </jcr:content>
</jcr:root>
