#set( $symbol_pound = '#' )
#set( $symbol_dollar = '$' )
#set( $symbol_escape = '\' )
<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
    jcr:primaryType="cq:Page">
    <jcr:content
        cq:tags="[${clientName}-core:content-type/page]"
        cq:template="/conf/${clientName}-core/settings/wcm/templates/twocolumn"
        jcr:primaryType="cq:PageContent"
        jcr:title="facebook"
        sling:resourceType="${clientName}-core/components/template/base"
        redirectTarget="https://www.facebook.com/${clientName}-core">
        <article
            jcr:primaryType="nt:unstructured"
            sling:resourceType="${clientName}-core/components/layout/article">
            <par
                jcr:primaryType="nt:unstructured"
                sling:resourceType="${clientName}-core/components/layout/container">
                <page-details
                    jcr:mixinTypes="[cq:Taggable]"
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="${clientName}-core/components/details/page-details"
                    cardIcon="[${clientName}-core:component-style-modifier/icon/size/sm,${clientName}-core:component-style-icon/social/facebook]"
                    cardIconShow="true"
                    componentIcon="[${clientName}-core:component-style-icon/social/facebook]"
                    componentModifiers="[${clientName}-core:component-style-modifier/icon/size/sm]"
                    showBreadcrumb="false"
                    showParsys="false"
                    showToolbar="false"
                    title="Join us on Facebook"/>
            </par>
        </article>
    </jcr:content>
</jcr:root>
